{% extends 'base.html.twig' %}

{% block title %}Hello ViewEventController!
{% endblock %}

{% block body %}
	<style>
        .card-img-top {
            height:40vh;
        }
    </style>

	<div class="container">
		<h1 class="text-center">Approved Events</h1>
		<p class="text-center text-danger">Events that have not been approved will not be shown!
		</p>
        {% if events %}
            {% for event in events %}
                <h1 class="text-center">{{ event.creator }} </h1>
                <div class="card text-center mb-2">
                    <img class="card-img-top" src="{{ asset('/images/' ~ 'event_image.jpeg' ) }}" alt="Card image cap">
                    <div class="card-header">
                    Event ID:  {{event.id}}
                    </div>
                    <div class="card-body">
                        Name: <h5 class="card-title">{{event.name}}</h5>
                        Description: <p class="card-text">{{event.description}}</p>
                        <p class="card-text">Number of participants: {{event.numberParticipants}}</p>
                        {% if event.approvalStatus == true %}
                            <p class="card-text">Status: <span class="text-success"> Approved </span></p>
                        {% else %}
                            <p class="card-text">Status: <span class="text-danger"> Not Approved </span></p>
                        {% endif %}
                        <!-- <p class="card-text">Status: {{event.approvalStatus|replace({'1': "Approved", '0': "Not approved!"})}}</p> -->
                        <p class="card-text"> Authenticate: <span class="text-danger">Not authenticate </span></p>
                        <a href="#" class="btn btn-primary">Authenticate</a>
                    </div>
                    <div class="card-footer text-muted">
                        Event date: {{event.date|date}}
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <h1 class="text-center mb-3">No events found</h1>
        {% endif %}
	</div>
{% endblock %}
