{% extends 'base.html.twig' %}

{% block title %} Create an Event {% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block body %}
<style>
    .maxHeight{
        max-height:100vh;
    }
    .fullHeight{
        height:82vh;
    }
</style>

<div class="container Wrapper maxHeight fullHeight">
    <div class="row align-items-center h-100">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create Event</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-md-offset-0">
                            <form action="{{ path('app_create_event') }} " method="POST" enctype="multipart/form-data">
                                {{ form_row(form.name) }}
                                {{ form_row(form.description) }}
                                {{ form_row(form.date) }}
                                {{ form_row(form.number_participants) }}
                                {{ form_row(form.approval_status) }}
                                {{ form_row(form.submit) }}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
